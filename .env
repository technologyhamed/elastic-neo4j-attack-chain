ELASTIC_HOST=http://host.docker.internal:9200
ELASTIC_USER=elastic
ELASTIC_PASSWORD=elastic12345678
NEO4J_URI=bolt://host.docker.internal:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=Admin@1234

# الگوی اندیس هشدارهای امنیتی الستیک
ELASTIC_INDEX_PATTERN=.internal.alerts-security.alerts-default-*

# پیشوند اندیس هدف برای ذخیره‌سازی استانداردشده
TARGET_INDEX_PREFIX=elastic-neo4j-attack-chain

# =============================================================================
# QUERY PARAMETERS (قابل تنظیم برای تحلیل‌های مختلف)
# =============================================================================
# بازه زمانی پیش‌فرض (می‌توانید به now-1h, now-6h, now-7d تغییر دهید)
TIME_RANGE_GTE=now-24h
TIME_RANGE_LTE=now

# حداقل امتیاز ریسک برای فیلتر هشدارها (0-100)
MIN_RISK_SCORE=30

# حداکثر تعداد زنجیره‌های استخراج‌شده در هر اجرا
MAX_CHAINS=50

# حداکثر تعداد هشدار در هر زنجیره
MAX_CHAIN_SIZE=15

# =============================================================================
# SEPSES ONTOLOGY (استاندارد ثابت - تغییر ندهید)
# =============================================================================
SEPSES_BASE_URI=https://w3id.org/sepses/vocab/event/log#

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/elastic-neo4j-attack-chain.log